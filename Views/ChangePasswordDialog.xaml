<Window x:Class="FehlzeitApp.Views.ChangePasswordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Passwort ändern"
        Height="550" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#F1F5F9">
    
    <Window.Resources>
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2563EB"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#9CA3AF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#0F172A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F8FAFC"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Border Margin="30">
            <StackPanel>
            <!-- Header -->
            <TextBlock Text="🔑 Passwort ändern" 
                       FontSize="24" FontWeight="Bold" Foreground="#0F172A" Margin="0,0,0,10"/>
            <TextBlock x:Name="TxtUsername" 
                       Text="Benutzer: admin" 
                       FontSize="13" Foreground="#64748B" Margin="0,0,0,20"/>
            
            <!-- Form Fields -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Current Password -->
                <StackPanel Grid.Row="0" Margin="0,0,0,15">
                    <TextBlock Text="Aktuelles Passwort *" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,5" Foreground="#0F172A"/>
                    <PasswordBox x:Name="TxtCurrentPassword" FontSize="14" Padding="12" BorderBrush="#E2E8F0" BorderThickness="1"/>
                </StackPanel>
                
                <!-- New Password -->
                <StackPanel Grid.Row="1" Margin="0,0,0,15">
                    <TextBlock Text="Neues Passwort *" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,5" Foreground="#0F172A"/>
                    <PasswordBox x:Name="TxtNewPassword" FontSize="14" Padding="12" BorderBrush="#E2E8F0" BorderThickness="1"/>
                </StackPanel>
                
                <!-- Confirm New Password -->
                <StackPanel Grid.Row="2" Margin="0,0,0,15">
                    <TextBlock Text="Neues Passwort bestätigen *" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,5" Foreground="#0F172A"/>
                    <PasswordBox x:Name="TxtConfirmPassword" FontSize="14" Padding="12" BorderBrush="#E2E8F0" BorderThickness="1"/>
                </StackPanel>
                
                <!-- Password Requirements -->
                <Border Grid.Row="3" Background="#DBEAFE" BorderBrush="#3B82F6" BorderThickness="1" 
                        CornerRadius="8" Padding="12" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="ℹ️ Passwort-Anforderungen:" FontSize="12" FontWeight="SemiBold" Foreground="#1E3A8A" Margin="0,0,0,5"/>
                        <TextBlock Text="• Mindestens 6 Zeichen" FontSize="11" Foreground="#1E3A8A"/>
                        <TextBlock Text="• Enthält Buchstaben und Zahlen" FontSize="11" Foreground="#1E3A8A"/>
                        <TextBlock Text="• Sonderzeichen empfohlen" FontSize="11" Foreground="#1E3A8A"/>
                    </StackPanel>
                </Border>
            </Grid>
            
            <!-- Action Buttons -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Button Grid.Column="1" x:Name="BtnSave" Content="💾 Passwort ändern" 
                        Style="{StaticResource PrimaryButton}" Click="BtnSave_Click" Margin="0,0,12,0"/>
                <Button Grid.Column="2" x:Name="BtnCancel" Content="✕ Abbrechen" 
                        Style="{StaticResource SecondaryButton}" Click="BtnCancel_Click"/>
            </Grid>
            </StackPanel>
        </Border>
    </ScrollViewer>
</Window>

