<UserControl x:Class="FehlzeitApp.Views.DashboardPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#FAFBFC" MinHeight="600" MinWidth="1000">

    <UserControl.Resources>
        <!-- Professional Color Palette -->
        <SolidColorBrush x:Key="PrimaryBlue" Color="#2563EB"/>
        <SolidColorBrush x:Key="SecondaryBlue" Color="#3B82F6"/>
        <SolidColorBrush x:Key="AccentGreen" Color="#10B981"/>
        <SolidColorBrush x:Key="DangerRed" Color="#EF4444"/>
        <SolidColorBrush x:Key="WarningOrange" Color="#F59E0B"/>
        <SolidColorBrush x:Key="NeutralGray" Color="#6B7280"/>
        <SolidColorBrush x:Key="LightGray" Color="#F3F4F6"/>
        <SolidColorBrush x:Key="BorderGray" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="TextDark" Color="#111827"/>
        <SolidColorBrush x:Key="TextMedium" Color="#374151"/>
        <SolidColorBrush x:Key="TextLight" Color="#9CA3AF"/>

        <!-- Professional Card Style -->
        <Style x:Key="ProfessionalCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderGray}"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="4" Opacity="0.08" Color="#000000"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern ComboBox Style -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderGray}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        Grid.Column="2"
                                        Focusable="false"
                                        IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                        ClickMode="Press">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                                BorderBrush="{TemplateBinding BorderBrush}" 
                                                BorderThickness="{TemplateBinding BorderThickness}" 
                                                CornerRadius="8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition Width="20"/>
                                                </Grid.ColumnDefinitions>
                                                <ContentPresenter Grid.Column="0" Margin="{TemplateBinding Padding}"/>
                                                <Path x:Name="Arrow" Grid.Column="1" Fill="{TemplateBinding Foreground}" 
                                                      HorizontalAlignment="Center" VerticalAlignment="Center" 
                                                      Data="M 0 0 L 4 4 L 8 0 Z"/>
                                            </Grid>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="BorderBrush" Value="#C4B5FD"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#F3F4F6"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <ContentPresenter x:Name="ContentSite" IsHitTestVisible="False" 
                                            Content="{TemplateBinding SelectionBoxItem}"
                                            ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                            ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                            Margin="{TemplateBinding Padding}"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Left"/>
                            <Popup x:Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}" 
                                   AllowsTransparency="True" Focusable="False" PopupAnimation="Slide">
                                <Grid x:Name="DropDown" SnapsToDevicePixels="True" 
                                      MinWidth="{TemplateBinding ActualWidth}" 
                                      MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border x:Name="DropDownBorder" Background="White" 
                                            BorderThickness="1" BorderBrush="{StaticResource BorderGray}" 
                                            CornerRadius="8" Margin="0,4,0,0">
                                        <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                            <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                        </ScrollViewer>
                                    </Border>
                                </Grid>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="HasItems" Value="false">
                                <Setter TargetName="DropDownBorder" Property="MinHeight" Value="95"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Foreground" Value="{StaticResource TextLight}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" Style="{StaticResource ProfessionalCard}" Margin="0,0,0,20" Padding="24">
            <StackPanel>
                <TextBlock Text="ðŸ“Š Dashboard - Fehlzeit Statistiken" 
                          FontSize="24" FontWeight="Bold" 
                          Foreground="{StaticResource TextDark}" 
                          Margin="0,0,0,8"/>
                <TextBlock Text="Ãœbersicht Ã¼ber Mitarbeiter-Abwesenheiten nach Objekt und Zeitraum" 
                          FontSize="14" 
                          Foreground="{StaticResource TextMedium}"/>
            </StackPanel>
        </Border>

        <!-- Filter Controls -->
        <Border Grid.Row="1" Style="{StaticResource ProfessionalCard}" Margin="0,0,0,20" Padding="24">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Objekt Selection -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Objekt:" 
                          FontWeight="SemiBold" FontSize="14" 
                          Foreground="{StaticResource TextDark}" 
                          VerticalAlignment="Center" Margin="0,0,12,0"/>
                <ComboBox x:Name="CmbObjekt" Grid.Row="0" Grid.Column="1" 
                         Style="{StaticResource ModernComboBox}"
                         DisplayMemberPath="ObjektName"
                         SelectedValuePath="ObjektId"/>

                <!-- Year Selection -->
                <TextBlock Grid.Row="0" Grid.Column="2" Text="Jahr:" 
                          FontWeight="SemiBold" FontSize="14" 
                          Foreground="{StaticResource TextDark}" 
                          VerticalAlignment="Center" Margin="24,0,12,0"/>
                <ComboBox x:Name="CmbYear" Grid.Row="0" Grid.Column="3" 
                         Style="{StaticResource ModernComboBox}"/>

                <!-- Month Selection -->
                <TextBlock Grid.Row="0" Grid.Column="4" Text="Monat:" 
                          FontWeight="SemiBold" FontSize="14" 
                          Foreground="{StaticResource TextDark}" 
                          VerticalAlignment="Center" Margin="24,0,12,0"/>
                <ComboBox x:Name="CmbMonth" Grid.Row="0" Grid.Column="5" 
                         Style="{StaticResource ModernComboBox}"/>

                <!-- Refresh Button -->
                <Button Grid.Row="0" Grid.Column="6" 
                       Content="ðŸ”„ Aktualisieren" 
                       Background="{StaticResource PrimaryBlue}"
                       Foreground="White"
                       FontWeight="SemiBold"
                       FontSize="14"
                       Padding="16,10"
                       BorderThickness="0"
                       HorizontalAlignment="Right"
                       Click="BtnRefresh_Click"
                       Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" Background="{TemplateBinding Background}" 
                                    CornerRadius="8" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#1D4ED8"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#1E40AF"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>

        <!-- Main Chart Section -->
        <Border Grid.Row="2" Style="{StaticResource ProfessionalCard}" 
               Margin="0,0,0,20" Padding="24">
            <StackPanel>
                <TextBlock Text="ðŸ“Š Hauptstatistik - Mitarbeiter Abwesenheiten" 
                          FontSize="20" FontWeight="Bold" 
                          Foreground="{StaticResource TextDark}" 
                          Margin="0,0,0,20"/>
                <!-- Custom Chart using Canvas -->
                <Grid x:Name="MainChart" Height="400" Background="White">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Y-Axis Labels -->
                    <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Vertical" 
                               HorizontalAlignment="Right" Margin="0,0,10,0">
                        <TextBlock Text="8" FontSize="12" Foreground="#6B7280" HorizontalAlignment="Right"/>
                        <TextBlock Text="6" FontSize="12" Foreground="#6B7280" HorizontalAlignment="Right"/>
                        <TextBlock Text="4" FontSize="12" Foreground="#6B7280" HorizontalAlignment="Right"/>
                        <TextBlock Text="2" FontSize="12" Foreground="#6B7280" HorizontalAlignment="Right"/>
                        <TextBlock Text="0" FontSize="12" Foreground="#6B7280" HorizontalAlignment="Right"/>
                    </StackPanel>
                    
                    <!-- Chart Area -->
                    <Canvas x:Name="ChartCanvas" Grid.Row="0" Grid.Column="1" 
                           Background="Transparent" Margin="0,20,0,0"/>
                    
                    <!-- X-Axis Labels -->
                    <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" 
                               HorizontalAlignment="Center" Margin="0,10,0,0">
                        <TextBlock Text="Anna" FontSize="10" Foreground="#6B7280" Width="60" TextAlignment="Center"/>
                        <TextBlock Text="David" FontSize="10" Foreground="#6B7280" Width="60" TextAlignment="Center"/>
                        <TextBlock Text="Lisa" FontSize="10" Foreground="#6B7280" Width="60" TextAlignment="Center"/>
                        <TextBlock Text="Max" FontSize="10" Foreground="#6B7280" Width="60" TextAlignment="Center"/>
                        <TextBlock Text="Sarah" FontSize="10" Foreground="#6B7280" Width="60" TextAlignment="Center"/>
                        <TextBlock Text="Thomas" FontSize="10" Foreground="#6B7280" Width="60" TextAlignment="Center"/>
                        <TextBlock Text="Julia" FontSize="10" Foreground="#6B7280" Width="60" TextAlignment="Center"/>
                        <TextBlock Text="Michael" FontSize="10" Foreground="#6B7280" Width="60" TextAlignment="Center"/>
                        <TextBlock Text="Petra" FontSize="10" Foreground="#6B7280" Width="60" TextAlignment="Center"/>
                        <TextBlock Text="Stefan" FontSize="10" Foreground="#6B7280" Width="60" TextAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- Simple Legend - Only Krankheit -->
                    <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" 
                               HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0">
                        <Rectangle Width="12" Height="12" Fill="#EF4444" Margin="0,0,5,0"/>
                        <TextBlock Text="Krankheit" FontSize="12" Foreground="#374151"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>

        <!-- DataGrids Section -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Mitarbeiter Absence Statistics (Top Left) -->
            <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource ProfessionalCard}" 
                   Margin="0,0,10,10" Padding="20">
                <StackPanel>
                    <TextBlock Text="ðŸ‘¥ Mitarbeiter Abwesenheiten" 
                              FontSize="18" FontWeight="Bold" 
                              Foreground="{StaticResource TextDark}" 
                              Margin="0,0,0,16"/>
                    <DataGrid x:Name="MitarbeiterDataGrid" 
                             Height="300"
                             AutoGenerateColumns="False"
                             CanUserAddRows="False"
                             CanUserDeleteRows="False"
                             IsReadOnly="True"
                             GridLinesVisibility="Horizontal"
                             HeadersVisibility="Column"
                             Background="White"
                             BorderThickness="0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Mitarbeiter" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Abwesenheitstage" Binding="{Binding AbsenceDays}" Width="150"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>

            <!-- Yearly Objekt Statistics (Top Right) -->
            <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource ProfessionalCard}" 
                   Margin="10,0,0,10" Padding="20">
                <StackPanel>
                    <TextBlock Text="ðŸ“ˆ Jahresstatistik Objekt" 
                              FontSize="18" FontWeight="Bold" 
                              Foreground="{StaticResource TextDark}" 
                              Margin="0,0,0,16"/>
                    <DataGrid x:Name="YearlyDataGrid" 
                             Height="300"
                             AutoGenerateColumns="False"
                             CanUserAddRows="False"
                             CanUserDeleteRows="False"
                             IsReadOnly="True"
                             GridLinesVisibility="Horizontal"
                             HeadersVisibility="Column"
                             Background="White"
                             BorderThickness="0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Monat" Binding="{Binding Month}" Width="*"/>
                            <DataGridTextColumn Header="Abwesenheiten" Binding="{Binding Absences}" Width="150"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>

            <!-- Monthly Trends (Bottom Left) -->
            <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource ProfessionalCard}" 
                   Margin="0,10,10,0" Padding="20">
                <StackPanel>
                    <TextBlock Text="ðŸ“Š Monatliche Trends" 
                              FontSize="18" FontWeight="Bold" 
                              Foreground="{StaticResource TextDark}" 
                              Margin="0,0,0,16"/>
                    <DataGrid x:Name="TrendsDataGrid" 
                             Height="300"
                             AutoGenerateColumns="False"
                             CanUserAddRows="False"
                             CanUserDeleteRows="False"
                             IsReadOnly="True"
                             GridLinesVisibility="Horizontal"
                             HeadersVisibility="Column"
                             Background="White"
                             BorderThickness="0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Typ" Binding="{Binding Type}" Width="*"/>
                            <DataGridTextColumn Header="Anzahl" Binding="{Binding Count}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>

            <!-- Absence Types Distribution (Bottom Right) -->
            <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource ProfessionalCard}" 
                   Margin="10,10,0,0" Padding="20">
                <StackPanel>
                    <TextBlock Text="ðŸ¥§ Abwesenheitstypen" 
                              FontSize="18" FontWeight="Bold" 
                              Foreground="{StaticResource TextDark}" 
                              Margin="0,0,0,16"/>
                    <DataGrid x:Name="TypesDataGrid" 
                             Height="300"
                             AutoGenerateColumns="False"
                             CanUserAddRows="False"
                             CanUserDeleteRows="False"
                             IsReadOnly="True"
                             GridLinesVisibility="Horizontal"
                             HeadersVisibility="Column"
                             Background="White"
                             BorderThickness="0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Typ" Binding="{Binding Type}" Width="*"/>
                            <DataGridTextColumn Header="Anzahl" Binding="{Binding Count}" Width="100"/>
                            <DataGridTextColumn Header="%" Binding="{Binding Percentage}" Width="80"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
