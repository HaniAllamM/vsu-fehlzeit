<Window x:Class="FehlzeitApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hama Fehlzeit - Professional Edition" Height="700" Width="1200" 
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Icon="/Resources/app-icon.ico">
    
    <Window.Resources>
        <!-- Professional Light Theme Colors -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#F1F5F9"/>
        <SolidColorBrush x:Key="SidebarColor" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="AccentColor" Color="#3B82F6"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#0F172A"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#64748B"/>
        <SolidColorBrush x:Key="SidebarTextPrimary" Color="#0F172A"/>
        <SolidColorBrush x:Key="SidebarTextSecondary" Color="#64748B"/>
        <SolidColorBrush x:Key="BorderColor" Color="#E2E8F0"/>
        <SolidColorBrush x:Key="CardBackground" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="HoverColor" Color="#F1F5F9"/>
        
        <!-- Professional Button Style -->
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource SidebarTextSecondary}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Margin="10,2">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                            VerticalAlignment="Center" 
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource HoverColor}"/>
                    <Setter Property="Foreground" Value="{StaticResource SidebarTextPrimary}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="{StaticResource AccentColor}"/>
                    <Setter Property="Foreground" Value="{StaticResource SidebarTextPrimary}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBackground}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="4" Opacity="0.3" BlurRadius="12"/>
                </Setter.Value>
            </Setter>
        </Style>
        
    </Window.Resources>
    
    <Grid Background="{StaticResource PrimaryColor}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="250" MaxWidth="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Professional Sidebar -->
        <Border Grid.Column="0" 
                Background="{StaticResource SidebarColor}" 
                BorderThickness="0,0,1,0" 
                BorderBrush="{StaticResource BorderColor}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Header with Hama Logo -->
                <Border Grid.Row="0" Padding="20,20,20,20">
                    <StackPanel>
                        <!-- Logo and Title -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
                            <Border Background="White" 
                                    CornerRadius="8" 
                                    Padding="6"
                                    Margin="0,0,12,0"
                                    BorderThickness="1"
                                    BorderBrush="{StaticResource BorderColor}">
                                <Border.Effect>
                                    <DropShadowEffect Color="#000000" 
                                                    BlurRadius="8" 
                                                    ShadowDepth="2" 
                                                    Opacity="0.1"/>
                                </Border.Effect>
                                <Image Source="/Resources/hama-logo.png" 
                                       Width="36" 
                                       Height="36"
                                       Stretch="Uniform"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Hama Fehlzeit" 
                                           Foreground="{StaticResource SidebarTextPrimary}" 
                                           FontSize="18" 
                                           FontWeight="Bold"/>
                                <TextBlock Text="Professional Edition" 
                                           Foreground="{StaticResource SidebarTextSecondary}" 
                                           FontSize="11" 
                                           Margin="0,2,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- Navigation Menu -->
