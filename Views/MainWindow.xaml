                <!-- User Info at Bottom -->
                <Border Grid.Row="2" 
                        Background="{StaticResource PrimaryColor}" 
                        Margin="10,0,10,10" 
                        CornerRadius="8" 
                        Padding="15"
                        BorderThickness="1"
                        BorderBrush="{StaticResource BorderColor}">
                    <StackPanel>
                        <TextBlock Text="Angemeldet als:" 
                                   Foreground="{StaticResource SidebarTextSecondary}" 
                                   FontSize="11"/>
                        <TextBlock Text="Administrator" 
                                   Foreground="{StaticResource SidebarTextPrimary}" 
                                   FontSize="13" 
                                   FontWeight="SemiBold"/>
                        <Button Content="Abmelden" 
                                Background="Transparent" 
