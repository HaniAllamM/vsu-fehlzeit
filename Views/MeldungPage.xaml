<UserControl x:Class="FehlzeitApp.Views.MeldungPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:FehlzeitApp.Converters"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="#F1F5F9">

    <UserControl.Resources>
        <converters:BooleanToIsActiveConverter x:Key="BooleanToIsActiveConverter"/>
        <converters:StringToBrushConverter x:Key="StringToBrushConverter"/>
        
        <!-- Modern Button Styles -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2563EB"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#9CA3AF"/>
                    <Setter Property="Opacity" Value="0.6"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#0F172A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F8FAFC"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="36"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F1F5F9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#0F172A"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#3B82F6"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern ComboBox Style -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#0F172A"/>
        </Style>

        <SolidColorBrush x:Key="TextPrimary" Color="#0F172A"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#64748B"/>
        <SolidColorBrush x:Key="BorderColor" Color="#E2E8F0"/>
        
        <!-- Card Style -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.08" ShadowDepth="2" BlurRadius="12"/>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="420" x:Name="FormColumn"/>
        </Grid.ColumnDefinitions>

        <!-- Main Content -->
        <Border Grid.Column="0" Style="{StaticResource Card}" Margin="0,0,10,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0" Padding="24,20" BorderThickness="0,0,0,1" BorderBrush="{StaticResource BorderColor}">
                    <Grid>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="📋 Meldungen" FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextPrimary}"/>
                            <TextBlock Text="Verwalten Sie Meldungsarten und Kategorien" FontSize="14" Foreground="{StaticResource TextSecondary}" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Toolbar -->
                <Border Grid.Row="1" Padding="24,16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Search Box -->
                        <Border Grid.Column="0" 
                                Background="White" 
                                BorderBrush="{StaticResource BorderColor}" 
                                BorderThickness="1" 
                                CornerRadius="8"
                                Padding="12,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" 
                                          Text="🔍" 
                                          FontSize="16" 
                                          VerticalAlignment="Center" 
                                          Margin="0,0,8,0"
                                          Foreground="{StaticResource TextSecondary}"/>
                                <TextBox Grid.Column="1" 
                                        x:Name="TxtSearch" 
                                        TextChanged="TxtSearch_TextChanged"
                                        BorderThickness="0"
                                        Background="Transparent"
                                        VerticalContentAlignment="Center"
                                        FontSize="14"
                                        Foreground="{StaticResource TextPrimary}">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="TextBox">
                                                        <Border Background="{TemplateBinding Background}">
                                                            <ScrollViewer x:Name="PART_ContentHost"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                                <TextBlock Grid.Column="1" 
                                          Text="Meldungen durchsuchen..." 
                                          FontSize="14"
                                          Foreground="#94A3B8"
                                          VerticalAlignment="Center"
                                          IsHitTestVisible="False">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, ElementName=TxtSearch}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </Border>
                        
                        <Button Grid.Column="1" 
                                x:Name="BtnAddMeldung" 
                                Content="➕ Neue Meldung" 
                                Style="{StaticResource PrimaryButton}" 
                                Click="BtnAddMeldung_Click" 
                                Margin="12,0,0,0"/>
                    </Grid>
                </Border>

                <!-- Data Grid -->
                <DataGrid Grid.Row="2" x:Name="MeldungDataGrid"
                          ItemsSource="{Binding MeldungList}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          GridLinesVisibility="None"
                          HeadersVisibility="Column"
                          Background="White"
                          BorderThickness="0"
                          RowHeight="60"
                          Margin="24,0"
                          SelectionMode="Single"
                          SelectionUnit="FullRow"
                          IsReadOnly="True"
                          AlternatingRowBackground="#F8FAFC">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#F8FAFC"/>
                            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="FontSize" Value="13"/>
                            <Setter Property="Padding" Value="16,12"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
                            <Setter Property="HorizontalContentAlignment" Value="Left"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="16,0"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridCell">
                                        <Border Background="{TemplateBinding Background}" 
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#EFF6FF"/>
                                    <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.CellStyle>
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="BorderBrush" Value="#F1F5F9"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F8FAFC"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#EFF6FF"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="Farbe" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Width="50" Height="28" CornerRadius="6" HorizontalAlignment="Left">
                                        <Border.Background>
                                            <SolidColorBrush Color="{Binding FarbeColor}"/>
                                        </Border.Background>
                                        <Border.Effect>
                                            <DropShadowEffect Color="#000000" Opacity="0.1" ShadowDepth="1" BlurRadius="4"/>
                                        </Border.Effect>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="Beschreibung" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Beschreibung}" 
                                              FontSize="14" 
                                              FontWeight="Medium"
                                              Foreground="{StaticResource TextPrimary}"
                                              VerticalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="Sortierung" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="#F1F5F9" 
                                            CornerRadius="6" 
                                            Padding="8,4"
                                            HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding Sortierung}" 
                                                  FontSize="13"
                                                  FontWeight="SemiBold"
                                                  Foreground="{StaticResource TextSecondary}"
                                                  HorizontalAlignment="Center"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="Status" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="6" 
                                            Padding="10,6"
                                            HorizontalAlignment="Center">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Aktiv}" Value="True">
                                                        <Setter Property="Background" Value="#D1FAE5"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Aktiv}" Value="False">
                                                        <Setter Property="Background" Value="#FEE2E2"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock FontSize="12" FontWeight="SemiBold" HorizontalAlignment="Center">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Aktiv}" Value="True">
                                                            <Setter Property="Text" Value="✓ Aktiv"/>
                                                            <Setter Property="Foreground" Value="#059669"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Aktiv}" Value="False">
                                                            <Setter Property="Text" Value="✕ Inaktiv"/>
                                                            <Setter Property="Foreground" Value="#DC2626"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="Aktionen" Width="140">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Content="✏️" Tag="{Binding}" Click="BtnEdit_Click" Style="{StaticResource ActionButton}" ToolTip="Bearbeiten"/>
                                        <Button Content="🗑️" Tag="{Binding}" Click="BtnDelete_Click" Style="{StaticResource ActionButton}" ToolTip="Löschen"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Loading Panel -->
                <Border Grid.Row="2" x:Name="LoadingPanel" Background="#F0FFFFFF" Visibility="Collapsed">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="⏳" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,16"/>
                        <TextBlock Text="Laden..." FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Status Bar -->
                <Border Grid.Row="3" Background="#F8FAFC" Padding="24,12" BorderThickness="0,1,0,0" BorderBrush="{StaticResource BorderColor}">
                    <Grid>
                        <TextBlock x:Name="StatusText" Text="Bereit" FontSize="13" Foreground="{StaticResource TextSecondary}"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Right Panel Separator -->
        <GridSplitter Grid.Column="1" Width="5" Background="Transparent" HorizontalAlignment="Center" VerticalAlignment="Stretch"/>

        <!-- Right Panel - Form -->
        <Border Grid.Column="2" x:Name="FormPanel" Style="{StaticResource Card}" Margin="10,0,0,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="24">
                    <!-- Form Header -->
                    <Border Background="#EFF6FF" CornerRadius="8" Padding="16" Margin="0,0,0,24">
                        <StackPanel>
                            <TextBlock x:Name="FormTitle" Text="Neue Meldung" FontSize="20" FontWeight="Bold" Foreground="{StaticResource TextPrimary}"/>
                            <TextBlock x:Name="FormSubtitle" Text="Bitte alle Felder ausfüllen" FontSize="13" Foreground="{StaticResource TextSecondary}" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Error Panel -->
                    <Border x:Name="ErrorPanel" Background="#FEF2F2" BorderBrush="#FCA5A5" BorderThickness="1" CornerRadius="8" Padding="16" Margin="0,0,0,20" Visibility="Collapsed">
                        <StackPanel>
                            <TextBlock Text="⚠️ Fehler" FontSize="14" FontWeight="SemiBold" Foreground="#DC2626" Margin="0,0,0,8"/>
                            <TextBlock x:Name="ErrorText" TextWrapping="Wrap" FontSize="13" Foreground="#DC2626"/>
                        </StackPanel>
                    </Border>

                    <!-- Form Fields -->
                    <TextBlock Text="Beschreibung *" FontWeight="SemiBold" FontSize="13" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,8"/>
                    <TextBox x:Name="TxtBeschreibung" Style="{StaticResource ModernTextBox}" Margin="0,0,0,20"/>

                    <TextBlock Text="Farbe *" FontWeight="SemiBold" FontSize="13" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,8"/>
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <ComboBox Grid.Column="0" x:Name="CmbFarbe" Style="{StaticResource ModernComboBox}" SelectionChanged="CmbFarbe_SelectionChanged">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Border Width="24" Height="24" CornerRadius="6" Background="{Binding HexValue, Converter={StaticResource StringToBrushConverter}}" Margin="0,0,12,0">
                                            <Border.Effect>
                                                <DropShadowEffect Color="#000000" Opacity="0.1" ShadowDepth="1" BlurRadius="3"/>
                                            </Border.Effect>
                                        </Border>
                                        <TextBlock Text="{Binding Name}" VerticalAlignment="Center" FontSize="13"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        <Border Grid.Column="1" x:Name="ColorPreview" Width="50" Height="50" CornerRadius="8" Margin="12,0,0,0" Background="Gray" BorderBrush="{StaticResource BorderColor}" BorderThickness="1">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" Opacity="0.1" ShadowDepth="2" BlurRadius="6"/>
                            </Border.Effect>
                        </Border>
                    </Grid>

                    <TextBlock Text="Sortierung *" FontWeight="SemiBold" FontSize="13" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,8"/>
                    <TextBox x:Name="TxtSortierung" Style="{StaticResource ModernTextBox}" Margin="0,0,0,20"/>

                    <!-- Active Checkbox -->
                    <Border Background="#F8FAFC" CornerRadius="8" Padding="16" Margin="0,0,0,24">
                        <CheckBox x:Name="ChkAktiv" IsChecked="True" FontSize="14" Foreground="{StaticResource TextPrimary}">
                            <CheckBox.Content>
                                <StackPanel>
                                    <TextBlock Text="Aktiv" FontWeight="SemiBold"/>
                                    <TextBlock Text="Meldung ist aktiv und verwendbar" FontSize="12" Foreground="{StaticResource TextSecondary}" Margin="0,2,0,0"/>
                                </StackPanel>
                            </CheckBox.Content>
                        </CheckBox>
                    </Border>

                    <!-- Action Buttons -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="BtnSave" Grid.Column="0" Content="💾 Speichern" Style="{StaticResource PrimaryButton}" Click="BtnSave_Click" Margin="0,0,6,0"/>
                        <Button x:Name="BtnCancel" Grid.Column="1" Content="✕ Abbrechen" Style="{StaticResource SecondaryButton}" Margin="6,0,0,0" Click="BtnCancel_Click"/>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
