<UserControl x:Class="FehlzeitApp.Views.PdfViewerPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid Background="#F8FAFC">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2563EB" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="ðŸ“„" FontSize="24" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <TextBlock x:Name="TxtTitle" Text="PDF Viewer" 
                              FontSize="20" FontWeight="SemiBold" 
                              Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>

                <Button x:Name="BtnClose" Grid.Column="1" 
                       Content="âœ• SchlieÃŸen" 
                       Background="Transparent" 
                       Foreground="White" 
                       BorderBrush="White" 
                       BorderThickness="1"
                       Padding="15,8" 
                       FontSize="14"
                       Click="BtnClose_Click"
                       Cursor="Hand"/>
            </Grid>
        </Border>

        <!-- Content Area -->
        <Grid Grid.Row="1" Margin="20">
            <!-- Loading State -->
            <StackPanel x:Name="LoadingPanel" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"
                       Visibility="Visible">
                <TextBlock Text="ðŸ”„" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                <TextBlock Text="PDF wird geladen..." 
                          FontSize="18" 
                          Foreground="#64748B" 
                          HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Error State -->
            <Border x:Name="ErrorPanel" 
                   Background="#FEF2F2" 
                   BorderBrush="#FECACA" 
                   BorderThickness="1" 
                   CornerRadius="8" 
                   Padding="30"
                   Visibility="Collapsed">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="âš ï¸" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                    <TextBlock Text="Fehler beim Laden des PDFs" 
                              FontSize="20" 
                              FontWeight="SemiBold"
                              Foreground="#DC2626" 
                              HorizontalAlignment="Center" 
                              Margin="0,0,0,10"/>
                    <TextBlock x:Name="TxtErrorMessage" 
                              FontSize="14" 
                              Foreground="#7F1D1D" 
                              HorizontalAlignment="Center" 
                              TextWrapping="Wrap"
                              MaxWidth="400"/>
                    <Button x:Name="BtnRetry" 
                           Content="ðŸ”„ Erneut versuchen" 
                           Background="#DC2626" 
                           Foreground="White" 
                           BorderThickness="0"
                           Padding="20,10" 
                           Margin="0,20,0,0"
                           FontSize="14"
                           Click="BtnRetry_Click"
                           Cursor="Hand"/>
                </StackPanel>
            </Border>

            <!-- PDF Viewer -->
            <Border x:Name="PdfPanel" 
                   Background="White" 
                   BorderBrush="#E2E8F0" 
                   BorderThickness="1" 
                   CornerRadius="8"
                   Visibility="Collapsed">
                <wv2:WebView2 x:Name="PdfWebView"/>
            </Border>
        </Grid>
    </Grid>
</UserControl>
