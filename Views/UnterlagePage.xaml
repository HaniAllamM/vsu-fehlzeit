<UserControl x:Class="FehlzeitApp.Views.UnterlagePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
             xmlns:converters="clr-namespace:FehlzeitApp.Converters"
             mc:Ignorable="d"
             d:DesignHeight="900" d:DesignWidth="1600"
             Background="#F8F9FA">

    <UserControl.Resources>
        <converters:BooleanToIsActiveConverter x:Key="BooleanToIsActiveConverter"/>
        
        <!-- Color Resources -->
        <SolidColorBrush x:Key="TextMedium" Color="#374151"/>
        
        <!-- Modern Professional Button Styles -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#2563EB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1D4ED8"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#9CA3AF"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#1F2937"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F9FAFB"/>
                    <Setter Property="BorderBrush" Value="#9CA3AF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="IconButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F3F4F6"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <!-- Main Layout: DataGrid on Left, PDF Viewer on Right -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" MinWidth="600"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="3*" MinWidth="400"/>
        </Grid.ColumnDefinitions>
        
        <!-- LEFT PANEL: Document List -->
        <Border Grid.Column="0" Background="White" CornerRadius="12" Margin="20,20,5,20">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Opacity="0.08" ShadowDepth="0" BlurRadius="20"/>
            </Border.Effect>
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Header -->
                <Border Grid.Row="0" Background="#F8F9FA" CornerRadius="12,12,0,0" Padding="24,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="ðŸ“„ Dokumentenverwaltung" FontSize="22" FontWeight="Bold" Foreground="#111827"/>
                            <TextBlock Text="Verwalten und durchsuchen Sie alle Unterlagen" FontSize="13" Foreground="#6B7280" Margin="0,4,0,0"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                            <Button x:Name="BtnRefresh" Content="ðŸ”„" Style="{StaticResource IconButton}" 
                                    Click="BtnRefresh_Click" ToolTip="Aktualisieren" Margin="0,0,8,0"/>
                            <Button x:Name="BtnFixObjektIds" Content="ðŸ”§ Objekt-IDs reparieren" Style="{StaticResource SecondaryButton}" 
                                    Click="BtnFixObjektIds_Click" ToolTip="Fehlende Objekt-IDs fÃ¼r bestehende Unterlagen reparieren" Margin="0,0,8,0"/>
                            <Button x:Name="BtnAddUnterlage" Content="+ Neu" Style="{StaticResource PrimaryButton}" 
                                    Click="BtnAddUnterlage_Click" Padding="16,8"/>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- Filters Section -->
                <Border Grid.Row="1" Background="White" Padding="24,20" BorderThickness="0,1,0,1" BorderBrush="#E5E7EB">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="16"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- First Row: Search and Main Filters -->
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="12"/>
                                <ColumnDefinition Width="220"/>
                                <ColumnDefinition Width="12"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="12"/>
                                <ColumnDefinition Width="200"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Search Filter -->
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="ðŸ” Suche" FontWeight="SemiBold" FontSize="13" 
                                           Foreground="{StaticResource TextMedium}" Margin="0,0,0,8"/>
                                <TextBox x:Name="TxtSearch" Height="44" Padding="14,0" 
                                     BorderBrush="#D1D5DB" BorderThickness="1" FontSize="14"
                                     TextChanged="TxtSearch_TextChanged">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TextBox">
                                                    <Border Background="White" BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="8">
                                                        <Grid>
                                                                <TextBlock Text="Dokumente durchsuchen..." Foreground="#9CA3AF" 
                                                                           Margin="14,0" VerticalAlignment="Center" IsHitTestVisible="False">
                                                                <TextBlock.Style>
                                                                    <Style TargetType="TextBlock">
                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource TemplatedParent}}" Value="">
                                                                                <Setter Property="Visibility" Value="Visible"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </TextBlock.Style>
                                                            </TextBlock>
                                                                <ScrollViewer x:Name="PART_ContentHost" Margin="14,0" VerticalAlignment="Center"/>
                                                        </Grid>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="BorderBrush" Value="#60A5FA"/>
                                            </Trigger>
                                            <Trigger Property="IsFocused" Value="True">
                                                <Setter Property="BorderBrush" Value="#3B82F6"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                            </StackPanel>
                            
                            <!-- Standort (Objekt) Filter -->
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="ðŸ¢ Standort" FontWeight="SemiBold" FontSize="13" 
                                           Foreground="{StaticResource TextMedium}" Margin="0,0,0,8"/>
                                <ComboBox x:Name="CmbObjekt" Height="44" Padding="14,0" FontSize="14"
                                          BorderBrush="#D1D5DB" BorderThickness="1"
                                          DisplayMemberPath="ObjektName"
                                          SelectedValuePath="ObjektId"
                                          SelectionChanged="CmbObjekt_SelectionChanged">
                                    <ComboBox.Style>
                                        <Style TargetType="ComboBox">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ComboBox">
                                                        <Grid>
                                                            <ToggleButton x:Name="ToggleButton" 
                                                                          Grid.Column="2" 
                                                                          Focusable="false"
                                                                          IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                                          ClickMode="Press"
                                                                          Background="White"
                                                                          BorderBrush="{TemplateBinding BorderBrush}"
                                                                          BorderThickness="{TemplateBinding BorderThickness}">
                                                                <ToggleButton.Template>
                                                                    <ControlTemplate TargetType="ToggleButton">
                                                                        <Border Background="{TemplateBinding Background}" 
                                                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                                                CornerRadius="8">
                                                                            <Grid>
                                                                                <Grid.ColumnDefinitions>
                                                                                    <ColumnDefinition Width="*"/>
                                                                                    <ColumnDefinition Width="20"/>
                                                                                </Grid.ColumnDefinitions>
                                                                                <Path Grid.Column="1" 
                                                                                      HorizontalAlignment="Center" 
                                                                                      VerticalAlignment="Center"
                                                                                      Data="M 0 0 L 4 4 L 8 0 Z"
                                                                                      Fill="#6B7280"/>
                                                                            </Grid>
                                                                        </Border>
                                                                    </ControlTemplate>
                                                                </ToggleButton.Template>
                                                            </ToggleButton>
                                                            <ContentPresenter x:Name="ContentSite"
                                                                              IsHitTestVisible="False" 
                                                                              Content="{TemplateBinding SelectionBoxItem}"
                                                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                                              Margin="14,0,20,0"
                                                                              VerticalAlignment="Center"
                                                                              HorizontalAlignment="Left"/>
                                                            <Popup x:Name="Popup"
                                                                   Placement="Bottom"
                                                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                                                   AllowsTransparency="True" 
                                                                   Focusable="False"
                                                                   PopupAnimation="Slide">
                                                                <Grid x:Name="DropDown"
                                                                      SnapsToDevicePixels="True"                
                                                                      MinWidth="{TemplateBinding ActualWidth}"
                                                                      MaxHeight="200">
                                                                    <Border x:Name="DropDownBorder"
                                                                            Background="White"
                                                                            BorderThickness="1"
                                                                            BorderBrush="#D1D5DB"
                                                                            CornerRadius="8"
                                                                            Margin="0,4,0,0">
                                                                        <Border.Effect>
                                                                            <DropShadowEffect Color="#000000" Opacity="0.1" ShadowDepth="2" BlurRadius="8"/>
                                                                        </Border.Effect>
                                                                        <ScrollViewer Margin="4" SnapsToDevicePixels="True">
                                                                            <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                                                        </ScrollViewer>
                                                                    </Border>
                                                                </Grid>
                                                            </Popup>
                                                        </Grid>
                                                        <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="BorderBrush" Value="#60A5FA"/>
                                                </Trigger>
                                                <Trigger Property="IsFocused" Value="True">
                                                    <Setter Property="BorderBrush" Value="#3B82F6"/>
                                                </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ComboBox.Style>
                                </ComboBox>
                            </StackPanel>

                            <!-- Kategorie Filter -->
                            <StackPanel Grid.Column="4">
                                <TextBlock Text="ðŸ“ Kategorie" FontWeight="SemiBold" FontSize="13" 
                                           Foreground="{StaticResource TextMedium}" Margin="0,0,0,8"/>
                                <TextBox x:Name="TxtKategorie" Height="44" Padding="14,0" FontSize="14"
                                         BorderBrush="#D1D5DB" BorderThickness="1"
                                         TextChanged="TxtKategorie_TextChanged">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="TextBox">
                                                        <Border Background="White" BorderBrush="{TemplateBinding BorderBrush}"
                                                                BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="8">
                                                            <ScrollViewer x:Name="PART_ContentHost" Margin="14,0" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="BorderBrush" Value="#60A5FA"/>
                                                </Trigger>
                                                <Trigger Property="IsFocused" Value="True">
                                                    <Setter Property="BorderBrush" Value="#3B82F6"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                            </StackPanel>

                            <!-- Mitarbeiter Filter -->
                            <StackPanel Grid.Column="6">
                                <TextBlock Text="ðŸ‘¤ Mitarbeiter" FontWeight="SemiBold" FontSize="13" 
                                           Foreground="{StaticResource TextMedium}" Margin="0,0,0,8"/>
                                <ComboBox x:Name="CmbFilterMitarbeiter" Height="44" Padding="14,0" FontSize="14"
                                          BorderBrush="#D1D5DB" BorderThickness="1"
                                          DisplayMemberPath="Name"
                                          SelectedValuePath="MitarbeiterId"
                                          SelectionChanged="CmbFilterMitarbeiter_SelectionChanged">
                                    <ComboBox.Style>
                                        <Style TargetType="ComboBox">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ComboBox">
                                                        <Grid>
                                                            <ToggleButton x:Name="ToggleButton" 
                                                                          Grid.Column="2" 
                                                                          Focusable="false"
                                                                          IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                                          ClickMode="Press"
                                                                          Background="White"
                                                                          BorderBrush="{TemplateBinding BorderBrush}"
                                                                          BorderThickness="{TemplateBinding BorderThickness}">
                                                                <ToggleButton.Template>
                                                                    <ControlTemplate TargetType="ToggleButton">
                                                                        <Border Background="{TemplateBinding Background}" 
                                                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                                                CornerRadius="8">
                                                                            <Grid>
                                                                                <Grid.ColumnDefinitions>
                                                                                    <ColumnDefinition Width="*"/>
                                                                                    <ColumnDefinition Width="20"/>
                                                                                </Grid.ColumnDefinitions>
                                                                                <Path Grid.Column="1" 
                                                                                      HorizontalAlignment="Center" 
                                                                                      VerticalAlignment="Center"
                                                                                      Data="M 0 0 L 4 4 L 8 0 Z"
                                                                                      Fill="#6B7280"/>
                                                                            </Grid>
                                                                        </Border>
                                                                    </ControlTemplate>
                                                                </ToggleButton.Template>
                                                            </ToggleButton>
                                                            <ContentPresenter x:Name="ContentSite"
                                                                              IsHitTestVisible="False" 
                                                                              Content="{TemplateBinding SelectionBoxItem}"
                                                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                                              Margin="14,0,20,0"
                                                                              VerticalAlignment="Center"
                                                                              HorizontalAlignment="Left"/>
                                                            <Popup x:Name="Popup"
                                                                   Placement="Bottom"
                                                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                                                   AllowsTransparency="True" 
                                                                   Focusable="False"
                                                                   PopupAnimation="Slide">
                                                                <Grid x:Name="DropDown"
                                                                      SnapsToDevicePixels="True"                
                                                                      MinWidth="{TemplateBinding ActualWidth}"
                                                                      MaxHeight="200">
                                                                    <Border x:Name="DropDownBorder"
                                                                            Background="White"
                                                                            BorderThickness="1"
                                                                            BorderBrush="#D1D5DB"
                                                                            CornerRadius="8"
                                                                            Margin="0,4,0,0">
                                                                        <Border.Effect>
                                                                            <DropShadowEffect Color="#000000" Opacity="0.1" ShadowDepth="2" BlurRadius="8"/>
                                                                        </Border.Effect>
                                                                        <ScrollViewer Margin="4" SnapsToDevicePixels="True">
                                                                            <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                                                        </ScrollViewer>
                                                                    </Border>
                                                                </Grid>
                                                            </Popup>
                                                        </Grid>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="BorderBrush" Value="#60A5FA"/>
                                                            </Trigger>
                                                            <Trigger Property="IsFocused" Value="True">
                                                                <Setter Property="BorderBrush" Value="#3B82F6"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ComboBox.Style>
                                </ComboBox>
                            </StackPanel>
                        </Grid>
                        
                        <!-- Second Row: Date Filters and Actions -->
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="12"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="12"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="12"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="ðŸ“… Von Datum" FontWeight="SemiBold" FontSize="13" 
                                           Foreground="{StaticResource TextMedium}" Margin="0,0,0,8"/>
                                <DatePicker x:Name="DpFilterVonDatum" Height="44" Padding="14,0" FontSize="14"
                                        BorderBrush="#D1D5DB" BorderThickness="1" 
                                            SelectedDateChanged="DpFilterVonDatum_SelectedDateChanged">
                                    <DatePicker.Resources>
                                        <Style TargetType="DatePickerTextBox">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="DatePickerTextBox">
                                                        <Border Background="Transparent">
                                                            <ScrollViewer x:Name="PART_ContentHost" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </DatePicker.Resources>
                                </DatePicker>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="ðŸ“… Bis Datum" FontWeight="SemiBold" FontSize="13" 
                                           Foreground="{StaticResource TextMedium}" Margin="0,0,0,8"/>
                                <DatePicker x:Name="DpFilterBisDatum" Height="44" Padding="14,0" FontSize="14"
                                        BorderBrush="#D1D5DB" BorderThickness="1"
                                            SelectedDateChanged="DpFilterBisDatum_SelectedDateChanged">
                                    <DatePicker.Resources>
                                        <Style TargetType="DatePickerTextBox">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="DatePickerTextBox">
                                                        <Border Background="Transparent">
                                                            <ScrollViewer x:Name="PART_ContentHost" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </DatePicker.Resources>
                                </DatePicker>
                            </StackPanel>
                            
                            <Button x:Name="BtnLoadData" Grid.Column="4" Content="ðŸ“Š Laden" 
                                    Style="{StaticResource PrimaryButton}" Height="44" MinWidth="130"
                                    Margin="0,28,0,0"
                                    Click="BtnLoadData_Click"/>
                            
                            <Button x:Name="BtnClearFilters" Grid.Column="6" Content="ðŸ—‘ï¸ ZurÃ¼cksetzen" 
                                    Style="{StaticResource SecondaryButton}" Height="44" MinWidth="140"
                                    Margin="0,28,0,0"
                                    Click="BtnClearFilters_Click"/>
                        </Grid>
                    </Grid>
                </Border>
                
                <!-- Loading Indicator -->
                <StackPanel Grid.Row="2" x:Name="LoadingPanel" VerticalAlignment="Center" 
                            HorizontalAlignment="Center" Visibility="Collapsed">
                    <TextBlock Text="â³" FontSize="48" HorizontalAlignment="Center"/>
                    <TextBlock Text="Lade Dokumente..." FontSize="16" Foreground="#6B7280" 
                               HorizontalAlignment="Center" Margin="0,8,0,0"/>
                </StackPanel>
                
                <!-- Data Grid -->
                <DataGrid Grid.Row="2" x:Name="UnterlagenDataGrid" 
                          ItemsSource="{Binding UnterlagenList}" 
                          AutoGenerateColumns="False" 
                          CanUserAddRows="False" 
                          CanUserDeleteRows="False"
                          CanUserReorderColumns="False"
                          CanUserResizeRows="False"
                          GridLinesVisibility="None"
                          HeadersVisibility="Column"
                          SelectionMode="Single"
                          Background="White"
                          BorderThickness="0"
                          RowBackground="White"
                          AlternatingRowBackground="#F9FAFB"
                          SelectionChanged="UnterlagenDataGrid_SelectionChanged"
                          Margin="0,0,0,0">
                    
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Height" Value="56"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#EEF2FF"/>
                                    <Setter Property="BorderBrush" Value="#2563EB"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F9FAFB"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>
                    
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ðŸ“„ Dokument" Binding="{Binding Bezeichnung}" Width="*" MinWidth="200">
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#F8F9FA"/>
                                    <Setter Property="Foreground" Value="#111827"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="FontSize" Value="13"/>
                                    <Setter Property="Padding" Value="16,12"/>
                                    <Setter Property="BorderThickness" Value="0,0,0,2"/>
                                    <Setter Property="BorderBrush" Value="#E5E7EB"/>
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Padding" Value="16,0"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="FontWeight" Value="Medium"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        
                        <DataGridTextColumn Header="ðŸ“ Kategorie" Binding="{Binding Kategorie}" Width="140">
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#F8F9FA"/>
                                    <Setter Property="Foreground" Value="#111827"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="FontSize" Value="13"/>
                                    <Setter Property="Padding" Value="16,12"/>
                                    <Setter Property="BorderThickness" Value="0,0,0,2"/>
                                    <Setter Property="BorderBrush" Value="#E5E7EB"/>
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Padding" Value="16,0"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        
                        <DataGridTextColumn Header="ðŸ‘¤ Mitarbeiter" Binding="{Binding MitarbeiterName}" Width="160">
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#F8F9FA"/>
                                    <Setter Property="Foreground" Value="#111827"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="FontSize" Value="13"/>
                                    <Setter Property="Padding" Value="16,12"/>
                                    <Setter Property="BorderThickness" Value="0,0,0,2"/>
                                    <Setter Property="BorderBrush" Value="#E5E7EB"/>
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Padding" Value="16,0"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        
                        <DataGridTextColumn Header="ðŸ¢ Standort" Binding="{Binding ObjektName}" Width="140">
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#F8F9FA"/>
                                    <Setter Property="Foreground" Value="#111827"/>
