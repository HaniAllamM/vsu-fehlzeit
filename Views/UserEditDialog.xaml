<Window x:Class="FehlzeitApp.Views.UserEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Benutzer bearbeiten"
        Height="650" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#F1F5F9">
    
    <Window.Resources>
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2563EB"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#9CA3AF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#0F172A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F8FAFC"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Border Margin="30">
            <StackPanel>
            <!-- Header -->
            <TextBlock x:Name="TxtTitle" Text="Neuen Benutzer erstellen" 
                       FontSize="24" FontWeight="Bold" Foreground="#0F172A" Margin="0,0,0,20"/>
            
            <!-- Form Fields -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Username -->
                <StackPanel Grid.Row="0" Margin="0,0,0,15">
                    <TextBlock Text="Benutzername *" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,5" Foreground="#0F172A"/>
                    <TextBox x:Name="TxtUsername" FontSize="14" Padding="12" BorderBrush="#E2E8F0" BorderThickness="1"/>
                </StackPanel>
                
                <!-- Email -->
                <StackPanel Grid.Row="1" Margin="0,0,0,15">
                    <TextBlock Text="E-Mail *" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,5" Foreground="#0F172A"/>
                    <TextBox x:Name="TxtEmail" FontSize="14" Padding="12" BorderBrush="#E2E8F0" BorderThickness="1"/>
                </StackPanel>
                
                <!-- First Name -->
                <StackPanel Grid.Row="2" Margin="0,0,0,15">
                    <TextBlock Text="Vorname *" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,5" Foreground="#0F172A"/>
                    <TextBox x:Name="TxtFirstName" FontSize="14" Padding="12" BorderBrush="#E2E8F0" BorderThickness="1"/>
                </StackPanel>
                
                <!-- Last Name -->
                <StackPanel Grid.Row="3" Margin="0,0,0,15">
                    <TextBlock Text="Nachname *" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,5" Foreground="#0F172A"/>
                    <TextBox x:Name="TxtLastName" FontSize="14" Padding="12" BorderBrush="#E2E8F0" BorderThickness="1"/>
                </StackPanel>
                
                <!-- Is Active -->
                <StackPanel Grid.Row="4" Margin="0,0,0,15">
                    <CheckBox x:Name="ChkIsActive" Content="Aktiv" FontSize="14" IsChecked="True"/>
                </StackPanel>
                
                <!-- Is Admin -->
                <StackPanel Grid.Row="5" Margin="0,0,0,20">
                    <CheckBox x:Name="ChkIsAdmin" Content="Administrator" FontSize="14"/>
                </StackPanel>
                
                <!-- Info Message -->
                <Border Grid.Row="6" Background="#DBEAFE" BorderBrush="#3B82F6" BorderThickness="1" 
                        CornerRadius="8" Padding="12" Margin="0,0,0,20">
                    <TextBlock Text="â„¹ï¸ Bei Erstellung eines neuen Benutzers wird automatisch ein temporÃ¤res Passwort generiert." 
                               FontSize="12" Foreground="#1E3A8A" TextWrapping="Wrap"/>
                </Border>
            </Grid>
            
            <!-- Action Buttons -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Button Grid.Column="1" x:Name="BtnSave" Content="ðŸ’¾ Speichern" 
                        Style="{StaticResource PrimaryButton}" Click="BtnSave_Click" Margin="0,0,12,0"/>
                <Button Grid.Column="2" x:Name="BtnCancel" Content="âœ• Abbrechen" 
                        Style="{StaticResource SecondaryButton}" Click="BtnCancel_Click"/>
            </Grid>
        </StackPanel>
        </Border>
    </ScrollViewer>
</Window>

