<UserControl x:Class="FehlzeitApp.Views.UserObjektPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="900" d:DesignWidth="1400"
             Background="#F1F5F9">

    <UserControl.Resources>
        <!-- Modern Button Styles -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2563EB"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#9CA3AF"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#0F172A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F1F5F9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#EF4444"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#DC2626"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F1F5F9"/>
                    <Setter Property="BorderBrush" Value="#3B82F6"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.1" ShadowDepth="2" BlurRadius="8"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox Style (matching MitarbeiterPage) -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton"
                                          Grid.Column="2"
                                          Focusable="false"
                                          IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          ClickMode="Press">
                                <ToggleButton.Style>
                                    <Style TargetType="ToggleButton">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ToggleButton">
                                                    <Border Background="White"
                                                            BorderBrush="#E2E8F0"
                                                            BorderThickness="1"
                                                            CornerRadius="6">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition/>
                                                                <ColumnDefinition Width="20"/>
                                                            </Grid.ColumnDefinitions>
                                                            <ContentPresenter Grid.Column="0" Margin="12,10"/>
                                                            <Path Grid.Column="1" 
                                                                  Data="M 0 0 L 4 4 L 8 0 Z" 
                                                                  Fill="#64748B"
                                                                  HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"/>
                                                        </Grid>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ToggleButton.Style>
                            </ToggleButton>
                            <ContentPresenter x:Name="ContentSite"
                                              IsHitTestVisible="False"
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                              Margin="12,10,32,10"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left"/>
                            <Popup x:Name="Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Slide">
                                <Border Background="White"
                                        BorderBrush="#E2E8F0"
                                        BorderThickness="1"
                                        CornerRadius="6"
                                        Margin="0,4,0,0">
                                    <ScrollViewer Margin="4" MaxHeight="200">
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="ToggleButton" Property="BorderBrush" Value="#3B82F6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <!-- Access Denied Panel -->
        <Border x:Name="AccessDeniedPanel" Background="White" Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="ðŸ”’" FontSize="72" HorizontalAlignment="Center" Margin="0,0,0,16"/>
                <TextBlock Text="Zugriff verweigert" FontSize="24" FontWeight="Bold" Foreground="#DC2626" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                <TextBlock Text="Sie haben keine Berechtigung, diese Seite zu sehen." FontSize="14" Foreground="#64748B" HorizontalAlignment="Center"/>
                <TextBlock Text="Nur Administratoren kÃ¶nnen Benutzer-Projekt-Zuordnungen verwalten." FontSize="14" Foreground="#64748B" HorizontalAlignment="Center" Margin="0,4,0,0"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <ScrollViewer x:Name="MainContent" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Grid Margin="24" MaxWidth="1800">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="16"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="16"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Page Header -->
                <Border Grid.Row="0" Style="{StaticResource Card}" Padding="24">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Benutzer-Projekt Verwaltung" FontSize="24" FontWeight="Bold" Foreground="#0F172A"/>
                            <TextBlock Text="Verwalten Sie Zuordnungen zwischen Benutzern und Projekten" FontSize="13" Foreground="#64748B" Margin="0,4,0,0"/>
                        </StackPanel>
                        <Button Grid.Column="1" x:Name="BtnRefresh" Content="ðŸ”„ Aktualisieren" 
                                Style="{StaticResource SecondaryButton}" Click="BtnRefresh_Click"
                                Padding="16,8" FontSize="14" VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <!-- Filter Mode Selection with Radio Buttons -->
                <Border Grid.Row="2" Style="{StaticResource Card}" Padding="24">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="16"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Radio Buttons -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <TextBlock Text="Anzeigen nach:" FontSize="14" FontWeight="SemiBold" Foreground="#0F172A" VerticalAlignment="Center" Margin="0,0,16,0"/>
                            <RadioButton x:Name="RbShowByObjekt" Content="ðŸ“ Projekt auswÃ¤hlen â†’ Benutzer anzeigen" 
                                         FontSize="14" Margin="0,0,24,0" VerticalAlignment="Center"
                                         Checked="FilterMode_Changed" GroupName="FilterMode"/>
                            <RadioButton x:Name="RbShowByUser" Content="ðŸ‘¤ Benutzer auswÃ¤hlen â†’ Projekte anzeigen" 
                                         FontSize="14" VerticalAlignment="Center" IsChecked="True"
                                         Checked="FilterMode_Changed" GroupName="FilterMode"/>
                        </StackPanel>

                        <!-- Filter ComboBoxes -->
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Objekt Filter Panel -->
                            <StackPanel x:Name="ObjektFilterPanel" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" Visibility="Collapsed">
                                <TextBlock Text="Projekt:" VerticalAlignment="Center" FontSize="14" FontWeight="SemiBold" Margin="0,0,12,0"/>
                                <ComboBox x:Name="CmbObjekts" FontSize="14" Height="40" Width="400"
                                          SelectionChanged="CmbObjekts_SelectionChanged"
                                          DisplayMemberPath="ObjektName"
                                          Style="{StaticResource ModernComboBox}"/>
                            </StackPanel>

                            <!-- User Filter Panel -->
                            <StackPanel x:Name="UserFilterPanel" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal">
                                <TextBlock Text="Benutzer:" VerticalAlignment="Center" FontSize="14" FontWeight="SemiBold" Margin="0,0,12,0"/>
                                <ComboBox x:Name="CmbUsers" FontSize="14" Height="40" Width="400"
                                          SelectionChanged="CmbUsers_SelectionChanged"
                                          DisplayMemberPath="DisplayName"
                                          Style="{StaticResource ModernComboBox}"/>
                            </StackPanel>

                            <!-- Add Assignment Button -->
                            <Button x:Name="BtnAddAssignment" Grid.Column="3" Content="âž• Neue Zuordnung" 
                                    Style="{StaticResource PrimaryButton}" Click="BtnAddAssignment_Click"
                                    Padding="16,10" FontSize="14" Height="40"/>
                        </Grid>
                    </Grid>
                </Border>

                <!-- Results Section -->
                <Border Grid.Row="4" Style="{StaticResource Card}" Padding="0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Results Header -->
                        <Border Grid.Row="0" Background="#F8FAFC" Padding="20,16" BorderThickness="0,0,0,1" BorderBrush="#E2E8F0">
                            <Grid>
                                <TextBlock x:Name="TxtResultsHeader" Text="Zuordnungen" FontSize="16" FontWeight="Bold" Foreground="#0F172A"/>
                                <TextBlock x:Name="TxtResultsCount" Text="0 EintrÃ¤ge" FontSize="13" Foreground="#64748B" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <!-- DataGrid -->
                        <DataGrid Grid.Row="1" x:Name="AssignmentsDataGrid" 
                                  AutoGenerateColumns="False" 
                                  CanUserAddRows="False" 
                                  CanUserDeleteRows="False"
                                  IsReadOnly="True"
                                  GridLinesVisibility="None"
                                  HeadersVisibility="Column"
                                  Background="White"
                                  BorderThickness="0"
                                  SelectionMode="Single"
                                  SelectionUnit="FullRow"
                                  Margin="20,0,20,20"
                                  MinHeight="300">
                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#F8FAFC"/>
                                    <Setter Property="Foreground" Value="#64748B"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="FontSize" Value="13"/>
                                    <Setter Property="Padding" Value="16,12"/>
                                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                    <Setter Property="BorderBrush" Value="#E2E8F0"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>
                            <DataGrid.CellStyle>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Padding" Value="16,0"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="DataGridCell">
                                                <Border Background="{TemplateBinding Background}" 
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#EFF6FF"/>
                                            <Setter Property="Foreground" Value="#0F172A"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.CellStyle>
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Setter Property="Background" Value="White"/>
                                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                    <Setter Property="BorderBrush" Value="#F1F5F9"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#F8FAFC"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#EFF6FF"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.RowStyle>
                            <DataGrid.Columns>
                                <DataGridTextColumn x:Name="ColUserId" Header="Benutzer ID" Binding="{Binding UserId}" Width="120"/>
                                <DataGridTextColumn x:Name="ColUsername" Header="Benutzername" Binding="{Binding Username}" Width="*"/>
                                <DataGridTextColumn x:Name="ColObjektId" Header="Projekt ID" Binding="{Binding ObjektId}" Width="120"/>
                                <DataGridTextColumn x:Name="ColObjektName" Header="Projektname" Binding="{Binding ObjektName}" Width="*"/>
                                <DataGridTextColumn Header="Zugeordnet am" Binding="{Binding AssignedAt, StringFormat=dd.MM.yyyy HH:mm}" Width="160"/>
                                
                                <DataGridTemplateColumn x:Name="ActionsColumn" Header="Aktionen" Width="100">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="ðŸ—‘ï¸" ToolTip="Zuordnung entfernen" 
                                                    Style="{StaticResource ActionButton}" 
                                                    Padding="8,4" FontSize="12"
                                                    Click="BtnRemove_Click" Tag="{Binding}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
            </Grid>
        </ScrollViewer>

        <!-- Loading Overlay -->
        <Border x:Name="LoadingOverlay" Background="#CC000000" Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock x:Name="LoadingIcon" Text="â³" FontSize="72" HorizontalAlignment="Center" Margin="0,0,0,16">
                    <TextBlock.RenderTransform>
                        <RotateTransform x:Name="LoadingRotation" CenterX="36" CenterY="36" Angle="0"/>
                    </TextBlock.RenderTransform>
                </TextBlock>
                <TextBlock x:Name="LoadingText" Text="LÃ¤dt..." FontSize="20" Foreground="White" 
                           FontWeight="SemiBold" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Add Assignment Dialog -->
        <Border x:Name="AddAssignmentDialog" Background="#CC000000" Visibility="Collapsed">
            <Border Style="{StaticResource Card}" Width="500" Padding="32" MaxHeight="600">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="16"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="24"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Dialog Header -->
                    <StackPanel Grid.Row="0">
                        <TextBlock Text="âž• Neue Zuordnung erstellen" FontSize="20" FontWeight="Bold" Foreground="#0F172A"/>
                        <TextBlock Text="WÃ¤hlen Sie Benutzer und Projekt aus" FontSize="13" Foreground="#64748B" Margin="0,4,0,0"/>
                    </StackPanel>

                    <!-- Dialog Content -->
                    <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- User Selection -->
                            <TextBlock Text="Benutzer *" FontSize="13" FontWeight="SemiBold" Foreground="#0F172A" Margin="0,0,0,8"/>
                            <ComboBox x:Name="CmbNewUser" FontSize="14" Height="40" Margin="0,0,0,20"
                                      DisplayMemberPath="DisplayName"
                                      Style="{StaticResource ModernComboBox}"/>
                            
                            <!-- Project Selection -->
                            <TextBlock Text="Projekt *" FontSize="13" FontWeight="SemiBold" Foreground="#0F172A" Margin="0,0,0,8"/>
                            <ComboBox x:Name="CmbNewObjekt" FontSize="14" Height="40" Margin="0,0,0,20"
                                      DisplayMemberPath="ObjektName"
                                      Style="{StaticResource ModernComboBox}"/>

                            <!-- Info Panel -->
                            <Border Background="#DBEAFE" CornerRadius="8" Padding="16" Margin="0,8,0,0">
                                <StackPanel>
                                    <TextBlock Text="ðŸ’¡ Hinweis" FontSize="13" FontWeight="Bold" Foreground="#1E40AF" Margin="0,0,0,6"/>
                                    <TextBlock Text="Die Zuordnung wird sofort erstellt und ist fÃ¼r den Benutzer verfÃ¼gbar." 
                                               FontSize="12" Foreground="#1E3A8A" TextWrapping="Wrap" LineHeight="18"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Dialog Actions -->
                    <Grid Grid.Row="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0" Content="Abbrechen" Style="{StaticResource SecondaryButton}" 
                                Click="BtnCancelDialog_Click" Height="40" FontSize="14"/>
                        <Button Grid.Column="2" x:Name="BtnSaveAssignment" Content="âœ“ Zuordnung erstellen" 
                                Style="{StaticResource PrimaryButton}" Click="BtnSaveAssignment_Click" 
                                Height="40" FontSize="14"/>
                    </Grid>
                </Grid>
            </Border>
        </Border>
    </Grid>
</UserControl>
